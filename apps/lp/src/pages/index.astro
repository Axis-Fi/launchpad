---
import "../index.css";

import Layout from "../layouts/Layout.astro";
import ThemeDetector from "../theme-detector.astro";
import { ThemeToggle } from "../components/ThemeToggle";
---

<script>
  const button = document.getElementById("main-button");
  const container = document.getElementById("card-container");

  let show = false;
  let initialCardClass = "translate-x-[54vw]";
  let initialButtonClass = "translate-x-[47vw]";

  button?.addEventListener("click", () => {
    console.log("show");
    show = !show;
    if (show) {
      container?.classList.remove(initialCardClass);
      button?.classList.remove(initialButtonClass);
    } else {
      container?.classList.add(initialCardClass);
      button?.classList.add(initialButtonClass);
    }
  });
</script>

